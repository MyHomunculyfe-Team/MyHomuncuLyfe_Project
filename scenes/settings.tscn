#saves data fetched from GameManager to user save file
func _on_save_data_pressed() -> void:
	SaveLoad.save({\"Happiness\":GameManager.happiness, \"Hunger\":GameManager.hunger, \"Hygiene\":GameManager.hygiene, \"Pet_name\":GameManager.pet_name,})

#resets to default values
func _on_load_data_pressed() -> void:
	SaveLoad.reset()
